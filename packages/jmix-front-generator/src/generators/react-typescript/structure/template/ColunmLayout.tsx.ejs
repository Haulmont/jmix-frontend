import { Row, Col, Card } from 'antd';
import React from "react";
import {registerScreen} from "@haulmont/jmix-react-web";
import styles from "<%= relDirShift %>app/App.module.css";

const ROUTING_PATH = '/<%= nameLiteral %>';

const <%= className %> = () => (
  <Row gutter={16} role="grid">
    <% columnOptions.forEach(columnOption => { %>
      <Col span={<%= columnOption.gridSize %>}>
        <Card title="<%= columnOption.name %> header" tabIndex={0} role="gridcell" className={styles.focusInnerHighlight}>
          Content
        </Card>
      </Col>
    <% }) %>
  </Row>
);

registerScreen({
  component: <%= className %>,
  caption: 'screen.<%= className %>',
  screenId: '<%= className %>',
  menuOptions: {
    pathPattern: ROUTING_PATH,
    menuLink: ROUTING_PATH,
  }
});

export default <%= className %>;
