{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier"
  ],
  "plugins": [
    "react-hooks"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "ignorePatterns": [
    "config/**/*.js",
    "node_modules/**/*.ts",
    "coverage/lcov-report/*.js",
    "dist*/**/*.js"
  ],
  "rules": {
    "indent": [
      "warn",
      2
    ],
    "ordered-imports": 0,
    "interface-name": 0,
    "member-access": 0,
    "object-literal-sort-keys": 0,
    "jsx-no-lambda": 0,
    "max-classes-per-file": 0,
    "member-ordering": 0,
    "variable-name": 0,
    "interface-over-type-literal": 0,
    "no-unnecessary-initializer": 0,
    "curly": [
      1,
      "multi"
    ],
    "no-console": [ // Inherited config forbids all methods, but we want to use e.g. .warn() and .error()
      2,
      {
        "allow": [
          "warn",
          "error"
        ]
      }
    ],
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "forin": 0
  }
}