{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "plugins": [
    "react-hooks"
  ],
  "rules": {
    "indent": [ true, "spaces", 2 ],
    "ordered-imports": false,
    "interface-name": false,
    "member-access": false,
    "object-literal-sort-keys": false,
    "jsx-no-lambda": false,
    "max-classes-per-file": false,
    "member-ordering": false,
    "variable-name": false,
    "interface-over-type-literal": false,
    "no-unnecessary-initializer": false,
    "curly": [true, "ignore-same-line"],
    "array-type": false,
    "no-console": [ // Inherited config forbids all methods, but we want to use e.g. .warn() and .error()
      true,
      "assert",
      "clear",
      "count",
      "countReset",
      "debug",
      "dir",
      "dirxml",
      "exception",
      "group",
      "groupCollapsed",
      "groupEnd",
      "info",
      "log",
      "profile",
      "profileEnd",
      "table",
      "time",
      "timeEnd",
      "timeLog",
      "timeStamp",
      "trace"
    ],
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  }
}
